<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.collegeproject.watertank.Fragments.MainFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_network_check_black_24dp"
        android:text="Ph Level"
        android:textSize="18dp" />


    <ImageView
        android:id="@+id/main_meter"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/zero" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_invert_colors_black_24dp"
        android:text="Water Level"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/home_water_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="----"
        android:textColor="#000000"
        android:textSize="40dp"
        android:typeface="monospace" />


    <Button
        android:id="@+id/request_service_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Request Service"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/request_maintaince_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Request Maintaince"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/test_btn"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Refresh"
        android:textColor="#FFFFFF" />

</LinearLayout>
