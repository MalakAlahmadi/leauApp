<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.collegeproject.watertank.Fragments.MainFragment">



            <TextView
                android:layout_marginTop="40dp"
                android:textSize="18dp"
                android:drawableLeft="@drawable/ic_network_check_black_24dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ph Level" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/speedo2"
        android:layout_gravity="center_horizontal"
        android:layout_width="260dp"
        android:layout_height="120dp" />


            <TextView
                android:textSize="18dp"
                android:drawableLeft="@drawable/ic_invert_colors_black_24dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Level" />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85%"
                android:textColor="#000000"
                android:textSize="60dp"
                android:typeface="monospace" />

    <Button
        android:id="@+id/request_service_btn"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:text="Request Service"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/request_Mainlenance_btn"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:text="Request Mainlenance"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
